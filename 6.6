a=int(input())
b=[]
sum1=0
sum2=0
for i in range(a):
    b.append(int(input()))
f=0
l=len(b)-1
mid=(f+l)//2
while(f<l):
    mid=(f+l)//2
    for i in range(mid):
        sum1+=b[i]
    for i in range(mid+1,len(b)):
        sum2+=b[i]
    if(sum1==sum2):
        print(mid)
        break
    else:
        if(sum1>sum2):
            l=mid-1
        else:
            f=mid+1
        mid=(f+l)//2    
        sum1=0
        sum2=0
