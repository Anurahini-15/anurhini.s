
try:
    age_input = input()
    if age_input.strip() == "":
        print("No input provided.")
    else:
        try:
            age = int(age_input)
            if age < 0:
                print("Error: Please enter a valid age.")
            else:
                print(f"You are {age} years old.")
        except ValueError:
            print("Error: Please enter a valid age.")
except EOFError:
    print("Error: Please enter a valid age.")
