def is_increasing(lst):
    # Check if the list is strictly increasing
    increasing = all(lst[i] < lst[i+1] for i in range(len(lst)-1))
    if increasing:
        return True
    
    # Check if removing one element makes it strictly increasing
    for i in range(len(lst)):
        temp_lst = lst[:i] + lst[i+1:]
        if all(temp_lst[j] < temp_lst[j+1] for j in range(len(temp_lst)-1)):
            return True
    return False

# Input
n = int(input())
lst = [int(input()) for _ in range(n)]

# Output
if is_increasing(lst):
    print("True")
else:
    print("False")
